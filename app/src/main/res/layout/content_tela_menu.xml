<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_tela_menu"
        tools:context=".TelaMenu"
        android:id="@+id/linearLayout4">


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#B5E0E6"
            android:id="@+id/linearLayout12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-30dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#B5E0E6">


            <EditText
                    android:layout_width="232dp"
                    android:layout_height="41dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailText"
                    android:hint="Procure lugares"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_search"
                    android:background="@drawable/oval_shape_searchview"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    />

            <Button
                    android:layout_gravity="center"
                    android:id="@+id/goButton"
                    android:text="IR"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:background="@drawable/oval_shape_button"
                    android:textColor="#FFFFFF"
                    android:onClick="entrar"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF">

            <Button
                    android:layout_gravity="center"
                    android:id="@+id/enterButton"
                    android:text="FILTROS"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/oval_shape_button"
                    android:textColor="#FFFFFF"
                    android:onClick="entrar"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="20dp"/>

            <Spinner
                    android:id="@+id/categoria_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>