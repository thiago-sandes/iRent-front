<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".exibirOferta.ExibirOfertaActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_menu_white_24dp"
            android:id="@+id/exibirOfertaToolbarOferta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@android:color/white"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/exibirOfertaToolbarOferta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/exibirOfertaScrollView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:src="@drawable/ic_person_grey_24dp"
                    android:layout_width="104dp"
                    android:layout_height="112dp"
                    android:id="@+id/exibirOfertaImageViewFoto"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:contentDescription="@string/imagem_do_perfil_do_usuario"/>

            <TextView
                    android:text="@string/nome_usu_rio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewNome"
                    app:layout_constraintStart_toEndOf="@+id/exibirOfertaImageViewFoto"
                    android:layout_marginStart="32dp"
                    app:layout_constraintTop_toTopOf="@+id/exibirOfertaImageViewFoto"
                    app:layout_constraintBottom_toBottomOf="@+id/exibirOfertaImageViewFoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:textSize="24sp"/>

            <TextView
                    android:text="@string/titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewTitulo"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaImageViewFoto"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaImageViewFoto"
                    style="@style/exibirOfertaAtributos"/>

            <TextView
                    android:text="@string/telefone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewTelefone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaTextViewTitulo"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewTitulo"
                    style="@style/exibirOfertaAtributos"/>

            <TextView
                    android:text="@string/Email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewEmail"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaTextViewTelefone"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewTelefone"
                    style="@style/exibirOfertaAtributos"/>

            <TextView
                    android:text="@string/nota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewNota"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewEmail"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaTextViewEmail"
                    style="@style/exibirOfertaAtributos"/>

            <TextView
                    android:text="@string/descricao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewDescricao"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaTextViewNota"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewNota"
                    style="@style/exibirOfertaAtributos"/>

            <TextView
                    android:text="Aqui o ofertante descreve detalhadamente o imóvel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewTextoDescricao"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaTextViewDescricao"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewDescricao"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:textSize="18sp"
                    />

            <TextView
                    android:text="@string/comentarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirAnuncioTextViewComentarios"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaTextViewTextoDescricao"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewTextoDescricao"
                    style="@style/exibirOfertaAtributos"/>

            <TextView
                    android:text="@string/comentario_do_usuario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirAnuncioTextViewTextoComentario"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirAnuncioTextViewComentarios"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaTextViewTextoDescricao"
                    app:layout_constraintEnd_toEndOf="@+id/exibirOfertaTextViewTextoDescricao"
                    android:textSize="18sp"/>

            <Button
                    android:text="mais comentários"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaButtonMaisComentarios"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirAnuncioTextViewTextoComentario"
                    app:layout_constraintStart_toStartOf="@+id/exibirAnuncioTextViewTextoComentario"
                    app:layout_constraintEnd_toEndOf="@+id/exibirAnuncioTextViewTextoComentario"
                    style="@style/IRent.Button.Borderless"
                    android:textSize="18sp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Adicione um comentário"
                    android:ems="10"
                    android:id="@+id/exibirOfertaEditTextAddComentario"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaButtonMaisComentarios"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaButtonMaisComentarios"
                    app:layout_constraintEnd_toStartOf="@+id/exibirOfertaButtonPublicar"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0"/>

            <Button
                    android:text="Publicar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaButtonPublicar"
                    app:layout_constraintEnd_toEndOf="@+id/exibirOfertaButtonMaisComentarios"
                    app:layout_constraintTop_toTopOf="@+id/exibirOfertaEditTextAddComentario"
                    app:layout_constraintBottom_toBottomOf="@+id/exibirOfertaEditTextAddComentario"
                    style="@style/IRent.Button.Borderless"
                    android:enabled="false"
                    app:layout_constraintVertical_bias="1.0"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewTitulo2"
                    app:layout_constraintTop_toTopOf="@+id/exibirOfertaTextViewTitulo"
                    app:layout_constraintBottom_toBottomOf="@+id/exibirOfertaTextViewTitulo"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/exibirOfertaTextViewTitulo"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewnumTel"
                    app:layout_constraintTop_toTopOf="@+id/exibirOfertaTextViewTelefone"
                    app:layout_constraintBottom_toBottomOf="@+id/exibirOfertaTextViewTelefone"
                    app:layout_constraintStart_toEndOf="@+id/exibirOfertaTextViewTelefone"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textSize="18sp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaTextViewEmail2"
                    app:layout_constraintTop_toTopOf="@+id/exibirOfertaTextViewEmail"
                    app:layout_constraintBottom_toBottomOf="@+id/exibirOfertaTextViewEmail"
                    app:layout_constraintStart_toEndOf="@+id/exibirOfertaTextViewEmail"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textSize="18sp"/>

            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaRatingBar"
                    app:layout_constraintTop_toTopOf="@+id/exibirOfertaTextViewNota"
                    app:layout_constraintBottom_toBottomOf="@+id/exibirOfertaTextViewNota"
                    app:layout_constraintStart_toEndOf="@+id/exibirOfertaTextViewNota"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:numStars="5"
                    android:stepSize="1.0"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="?android:attr/ratingBarStyle"
                    android:scaleX="0.65"
                    android:scaleY="0.65"/>

            <Button
                    android:text="@string/mapa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaButtonMapa"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaEditTextAddComentario"
                    app:layout_constraintStart_toStartOf="@+id/exibirOfertaEditTextAddComentario"
                    app:layout_constraintEnd_toStartOf="@+id/exibirOfertaButtonFotos"
                    android:layout_marginEnd="32dp"/>

            <Button
                    android:text="@string/fotos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exibirOfertaButtonFotos"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/exibirOfertaEditTextAddComentario"
                    app:layout_constraintEnd_toEndOf="@+id/exibirOfertaButtonPublicar"
                    app:layout_constraintStart_toEndOf="@+id/exibirOfertaButtonMapa"
                    android:layout_marginStart="32dp"
                    app:layout_constraintHorizontal_bias="1.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>