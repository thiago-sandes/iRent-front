<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".filtros.FiltrosActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/filtrosToolbar"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/filtrosToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/filtrosScrollView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_mode_edit_grey_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/filtroImageViewMasc"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/filtrosImagemViewEstudante"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/filtroButtonEstudafiltrosImagemViewEstudante"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_insert_emoticon_grey_24dp"
                    android:id="@+id/filtroImageViewMasc"
                    app:layout_constraintTop_toTopOf="@+id/filtrosImagemViewEstudante"
                    app:layout_constraintBottom_toBottomOf="@+id/filtrosImagemViewEstudante"
                    app:layout_constraintStart_toEndOf="@+id/filtrosImagemViewEstudante"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/filtroImageViewFem"
                    android:layout_marginEnd="16dp"
                    />

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_face_grey_24dp"
                    android:id="@+id/filtroImageViewFem"
                    app:layout_constraintTop_toTopOf="@+id/filtroImageViewMasc"
                    app:layout_constraintBottom_toBottomOf="@+id/filtroImageViewMasc"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/filtroImageViewMasc"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"/>

            <Button
                    android:text="@string/estudante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtroButtonEstudafiltrosImagemViewEstudante"
                    app:layout_constraintStart_toStartOf="@+id/filtrosImagemViewEstudante"
                    app:layout_constraintEnd_toEndOf="@+id/filtrosImagemViewEstudante"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtrosImagemViewEstudante"
                    style="@style/IRent.Button.Borderless"
                    android:textSize="14sp"/>

            <Button
                    android:text="@string/masculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtroButtonMasc"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewMasc"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewMasc"
                    style="@style/IRent.Button.Borderless"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewMasc"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/filtroImageViewPet"/>

            <Button
                    android:text="@string/feminino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtrosButtonFem"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewFem"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewFem"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewFem"
                    style="@style/IRent.Button.Borderless"
                    android:textSize="14sp"
                    />

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_people_grey_24dp"
                    android:id="@+id/filtroImageViewQtdPessoas"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroButtonEstudafiltrosImagemViewEstudante"
                    app:layout_constraintStart_toStartOf="@+id/filtroButtonEstudafiltrosImagemViewEstudante"
                    app:layout_constraintEnd_toEndOf="@+id/filtroButtonEstudafiltrosImagemViewEstudante"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/filtrosButtonQtdPessoas"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_pets_grey_24dp"
                    android:id="@+id/filtroImageViewPet"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroButtonMasc"
                    app:layout_constraintStart_toStartOf="@+id/filtroButtonMasc"
                    app:layout_constraintEnd_toEndOf="@+id/filtroButtonMasc"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_attach_money_grey_24dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtrosButtonFem"
                    app:layout_constraintEnd_toEndOf="@+id/filtrosButtonFem"
                    app:layout_constraintStart_toStartOf="@+id/filtrosButtonFem"
                    android:id="@+id/filtroImageViewPreco"/>

            <Button
                    android:text="@string/quantidade_pessoas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtrosButtonQtdPessoas"
                    style="@style/IRent.Button.Borderless"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewQtdPessoas"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewQtdPessoas"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewQtdPessoas"
                    android:textSize="14sp"/>

            <Button
                    android:text="@string/animais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtroButtonPet"
                    style="@style/IRent.Button.Borderless"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewPet"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewPet"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewPet"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"/>

            <Button
                    android:text="@string/preco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtroButtonPreco"
                    style="@style/IRent.Button.Borderless"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewPreco"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewPreco"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewPreco"
                    android:textSize="14sp"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_location_on_grey_24dp"
                    android:id="@+id/filtroImageViewLocalizacao"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtrosButtonQtdPessoas"
                    app:layout_constraintStart_toStartOf="@+id/filtrosButtonQtdPessoas"
                    app:layout_constraintEnd_toEndOf="@+id/filtrosButtonQtdPessoas"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_wifi_grey_24dp"
                    android:id="@+id/filtroImageViewWifi"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroButtonPet"
                    app:layout_constraintEnd_toEndOf="@+id/filtroButtonPet"
                    app:layout_constraintStart_toStartOf="@+id/filtroButtonPet"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_more_horiz_grey_24dp"
                    android:id="@+id/filtroImageViewMais"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroButtonPreco"
                    app:layout_constraintEnd_toEndOf="@+id/filtroButtonPreco"
                    app:layout_constraintStart_toStartOf="@+id/filtroButtonPreco"/>

            <Button
                    android:text="@string/localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fitroButtonLocalizacao"
                    style="@style/IRent.Button.Borderless"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewLocalizacao"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewLocalizacao"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewLocalizacao"
                    android:textSize="14sp"/>

            <Button
                    android:text="@string/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtrosButtonWifi"
                    style="@style/IRent.Button.Borderless"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewWifi"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewWifi"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewWifi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="40dp"
                    android:textSize="14sp"/>

            <Button
                    android:text="@string/mais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filtrosButtonMais"
                    style="@style/IRent.Button.Borderless"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/filtroImageViewMais"
                    app:layout_constraintStart_toStartOf="@+id/filtroImageViewMais"
                    app:layout_constraintEnd_toEndOf="@+id/filtroImageViewMais"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="14sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>