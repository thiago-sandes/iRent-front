<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroOferta">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:background="@drawable/textview_border"
                    android:id="@+id/id_imgView_oferta"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/foto"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/edit_titulo_oferta"
                    android:hint="@string/hint_titulo_oferta">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/input_titulo"/>
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/edit_descricao"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_descricao_oferta"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/id_endereco"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/hint_edit_endereco">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/input_endereco"/>
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/edit_preco"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_preco_oferta"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/edit_telefone_contato"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_telefone_contato"
                    android:text="@string/hint_telefone_contato"/>

            <TextView
                    android:text="@string/hint_view_restricoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_restricoes"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_view_restricoes"
                    android:layout_marginEnd="8dp"
                    />

            <CheckBox
                    android:text="@string/hint_check_animal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_animal"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="24dp"
                    android:hint="@string/hint_check_animal"/>

            <CheckBox
                    android:text="@string/hint_check_meninos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_meninos"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="40dp"
                    android:hint="@string/hint_check_meninos"/>

            <CheckBox
                    android:text="@string/hint_check_meninas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_meninas"
                    android:layout_marginTop="-88dp"
                    android:layout_marginStart="180dp"
                    android:hint="@string/hint_check_meninas"/>

            <CheckBox
                    android:text="@string/hint_check_som_alto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_som_alto"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="180dp"
                    android:hint="@string/hint_check_som_alto"/>

            <Button
                    android:text="@string/hint_btn_ofertar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_ofertar"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/hint_btn_ofertar"
                    android:layout_marginTop="50dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>