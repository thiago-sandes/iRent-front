<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:background="#1c92d2">


    <TextView
            android:text="iRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/logoText" android:textAlignment="center"
            android:textSize="30dp"
            style="bold" android:textStyle="bold" android:layout_marginTop="50dp" android:textColor="#000000"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailText"
            android:hint="Seu e-mail"
            android:layout_marginTop="65dp"
            android:drawableLeft="@drawable/ic_action_email" android:gravity="center_horizontal"
            android:layout_marginLeft="100dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passText"
            android:hint="Sua senha"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_action_password" android:gravity="center"
            android:layout_marginLeft="100dp"/>

    <Button
            android:id="@+id/enterButton"
            android:text="ENTRAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="160dp"
            android:background="#708090"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:onClick="entrar"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registerText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:textColor="#000000"
                android:textSize="17dp"/>
        <TextView
                android:text="Recuperar senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/retrieveText"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:textColor="#000000"
                android:textSize="17dp"/>
    </LinearLayout>
</LinearLayout>