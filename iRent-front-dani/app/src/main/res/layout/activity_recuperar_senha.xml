<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecuperarSenha">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recuperar_senha"
            android:id="@+id/textViewRecuperarSenha"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#000000"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/folder"
            android:id="@+id/imageViewRecuperarSenha"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecuperarSenha"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/imagem_recuperar_senha"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/textEmail"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/textEmail"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRecuperarSenha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:hint="@string/email"/>
    <TextView
            android:text="@string/obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewObs"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="18sp"/>
    <Button
            android:text="@string/recuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRecuperar"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewObs"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>